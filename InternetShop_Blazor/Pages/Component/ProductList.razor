 @using InternetShop_Blazor.Data.Entity

<div class="bg-light border p-2 col-3 offset-1">
    <div class="mb-4 card-background card">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal text-center">
                <label style="font-size:23px; color:steelblue;">
                    @_products.ProductName
                </label>
            </h4>
        </div>
        <img class="card-img-top" style="height:138px; width:236px;" src="@ConvertImageToDisplay(_products.ProductImage)" />
        <div class="card-body card-background" style="background-color:#f7f7f7;">
            <div class="d-flex justify-content-between align-items-center">
                 <div class="btn-group">
                     <label style="font-size:20px; color:black;">
                         <b>@_products.ProductPrice</b> $
                     </label>
                 </div>
            </div>
        </div>
        <NavLink class="btn btn-success pull-right text-white" href="#">Details</NavLink>

    </div>
</div>

@code {
    [Parameter]
    public Products _products { get; set; }

    string ConvertImageToDisplay(byte[] image)
    {
        if (image != null)
        {
            var base64 = Convert.ToBase64String(image);
            var finalString = string.Format("data:image/jpg;Base64,{0}", base64);
            return finalString;
        }
        return "";
    }
}
